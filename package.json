{
  "name": "tabulous",
  "displayName": "Tabulous - Terminal Tabs",
  "description": "Adds tabs for each terminal process to the status bar",
  "version": "0.5.2",
  "preview": true,
  "publisher": "bwildeman",
  "icon": "images/icon.png",
  "bugs": {
    "url": "https://github.com/BenWildeman/vscode-tabulous/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BenWildeman/vscode-tabulous"
  },
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "terminal",
    "tabs",
    "terminal tabs"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Tabulous Configuration",
      "properties": {
        "tabulous.activeTabColor": {
          "type": "string",
          "default": "yellow",
          "description": "Active tab color. Must be a valid css color"
        },
        "tabulous.defaultTerminals": {
          "type": "array",
          "description": "Default terminals to open when VS Code starts",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the terminal"
              },
              "directory": {
                "type": "string",
                "description": "Starting directory. Can include ${workspaceFolder}.\nRelative paths (after substitution) are resolved in the following order :\n   1. \"terminal.integrated.cwd\", if present\n   2. code-workspace file's location\n   3. Opened folder"
              },
              "command": {
                "type": "path",
                "description": "Starting command"
              },
              "executeCommand": {
                "type": "boolean",
                "description": "Whether or not to execute command. Setting to false pretypes it for you without executing",
                "default": true
              }
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "tabulous.createTerminal",
        "title": "Tabulous: Create terminal"
      },
      {
        "command": "tabulous.createNamedTerminal",
        "title": "Tabulous: Create named terminal"
      },
      {
        "command": "tabulous.reloadDefaultTerminals",
        "title": "Tabulous: Reload default terminals"
      },
      {
        "command": "tabulous.showTerminal",
        "title": "Tabulous: Show terminal"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.5",
    "mocha": "^6.2.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.6.4",
    "vscode": "^1.1.36",
    "vscode-test": "^1.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "homepage": "https://github.com/BenWildeman/vscode-tabulous#readme",
  "author": "Ben Wildeman",
  "license": "MIT"
}
